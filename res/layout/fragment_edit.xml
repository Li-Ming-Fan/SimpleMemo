<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="8dp" />  
        
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:orientation="horizontal" >
        
        <TextView
	        android:id="@+id/edit_tv_back_symbol"
	        android:layout_width="13dp"
	        android:layout_height="fill_parent"
	        android:layout_marginTop="0dp"
	        android:gravity="center|left"
	        android:textColor="#FF8B2500" 
	        android:textSize="19sp"/>

        <TextView
	        android:id="@+id/edit_tv_back"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:gravity="center|left"
	        android:textColor="#FF8B2500" 
	        android:textSize="17sp"/>
        
        <TextView
            android:layout_height="fill_parent"
	        android:layout_width="0dp"
	        android:layout_weight="1"/>
	    
	    <TextView
	        android:id="@+id/edit_tv_datetime"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:layout_marginTop="3dp"
	        android:gravity="center|right"
	        android:textColor="#FF999999" 
	        android:textSize="15sp"/>
            
    </LinearLayout>
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="20dp" />
    
    <ScrollView
        android:id="@+id/edit_scrollview"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:scrollbars="none" >
        
	    <EditText
	        android:id="@+id/edit_edittext"
	        android:labelFor="@+id/edit_edittext"
	        android:background="@null"
	        android:scrollbars="none"
	        android:layout_width="match_parent"
	        android:layout_height="2000dp"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:inputType="textMultiLine"
	        android:gravity="left|top"
	        android:textColor="@android:color/black"
	        android:textSize="18sp" />
	
	</ScrollView>
    
    
    
</LinearLayout>
